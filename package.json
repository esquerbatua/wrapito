{
  "name": "wrapito",
  "version": "0.0.0",
  "description": "ðŸŒ¯ ðŸŒ¯ Wrap you tests so that you can test both behaviour and components with less effort.",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "test": "jest --ci --coverage --config config/jest.config.json",
    "test:watch": "jest --watch --config config/jest.config.json",
    "build": "NODE_ENV=production tsc",
    "clean": "rm -rf dist",
    "postbuild": "node scripts/copy-publish-files.js",
    "publish-package": "npm run clean && npm run build && npm run postbuild && cd dist && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mercadona/wrapito.git"
  },
  "keywords": [
    "react",
    "testing",
    "test",
    "integration",
    "unit",
    "javascript",
    "dom",
    "js",
    "jest",
    "wrap",
    "component",
    "mock",
    "fetch",
    "http"
  ],
  "bugs": {
    "url": "https://github.com/mercadona/wrapito/issues"
  },
  "homepage": "https://github.com/mercadona/wrapito#readme",
  "dependencies": {
    "deep-equal": "^2.2.3",
    "object-hash": "^3.0.0",
    "whatwg-fetch": "^3.6.20"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.4",
    "@babel/core": "^7.23.7",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-transform-runtime": "^7.23.7",
    "@babel/preset-env": "^7.23.8",
    "@babel/preset-react": "^7.23.3",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@types/history": "^5.0.0",
    "@types/jest": "^29.5.11",
    "@types/react": "^18.2.48",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.1.0",
    "react-router-dom": "^6.21.2",
    "redux": "^5.0.1",
    "redux-thunk": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "chalk": "*",
    "jest": "*",
    "react": "*",
    "react-dom": "*"
  },
  "babel": {
    "presets": [
      "@babel/env",
      "@babel/react"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime",
      "@babel/proposal-class-properties"
    ]
  },
  "jest-junit": {
    "suiteName": "jest tests",
    "output": "results/tests/jest-junit.xml"
  }
}
